//validacion kilometros
//No puede validar datos alfabeticos por falta de comprension de vectores
#include <stdio.h>

int valKilometros(int kilometros)
{

		while(kilometros <= 0){
			printf("\nError! Reingrese los kilometros: ");
			fflush(stdin);
			scanf("%d", &kilometros);
		}
		return kilometros;


}

float valPrecioLatam(float precioLatam)
{
	int intento;
	while(precioLatam < 0){
		if(precioLatam < 0){
			printf("\nEsta ingresando un precio NO valido para calcular. \n");
			printf("Desea reintentar...? (1-SI/0-NO)-->");
			scanf("%d", &intento);
			if(intento == 1){
				printf("Ingrese el precio de vuelo de Latam: ");
				scanf("%f", &precioLatam);
				if(precioLatam == 0){
					printf("Usted ingreso un precio de $0, por lo tanto no se calculará.");s
				}
			} else {
				precioLatam = 0;

			}
		}

	}
	return precioLatam;
}



