void valOpcion(int opcion){
		int intento = 0;
		while(intento == 0){

			if(scanf("%d", &opcion)==0){
				intento++;
				printf("Error! Reingrese los kilometros: ");
				fflush(stdin);
				scanf("%d", &opcion);
			}
		}
}
