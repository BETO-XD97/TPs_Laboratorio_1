//validacion kilometros
//No puede validar datos alfabeticos por falta de comprension de vectores
#include <stdio.h>

int valKilometros(int kilometros)
{

		while(kilometros <= 0){
			printf("\nError! Reingrese los kilometros: ");
			fflush(stdin);
			scanf("%d", &kilometros);
		}
		return kilometros;


}

float valPrecioLatam(float precioLatam)
{
	int continuar;
	while(precioLatam < 0){
		if(precioLatam == 0){
			printf("Esta ingresando un precio NO valido para calcular. \n");
			printf("Desea continuar...(1-SI/0-NO)");
			scanf("%d", &continuar);
		} else {
			if(precioLatam < 0){
				printf("Esta ingresando un precio NO valido para calcular. \n");
				printf("Desea continuar...(1-SI/0-NO)");
				scanf("%d", &continuar);
			}
		}
	}
	/*
	if(precioLatam <= 0){
		printf("\nEsta ingresando un precio no valido para calcular. \n");
	} else {
		precioLatam = scanf("%f", &precioLatam);
	}*/
	return precioLatam;
}
