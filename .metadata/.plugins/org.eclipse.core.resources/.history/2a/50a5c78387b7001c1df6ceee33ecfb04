void valOpcion(int opcion)
{
	while(!isdigit(opcion) && opcion < 1 && opcion > 6)
	{
		printf("ERROR!!! \n"
				"1- Ingrese los KMs. \n"
						"2- Ingrese el precio del vuelo. \n"
						"3- Calcular los precios. \n"
						"4- Mostrar los precios. \n"
						"5- Carga forzada de datos. \n"
						"6- Salir. \n"
						"\nElegir su opcion: ");
		scanf("%d", &opcion);
	}
}


