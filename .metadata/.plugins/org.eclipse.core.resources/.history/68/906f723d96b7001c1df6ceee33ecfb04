#include <stdio.h>
#include <stdlib.h>
#include "validaciones.h"

int main(void) {
	setbuf(stdout, NULL);
	//variables
	int opcion;
	int intento = 0;
	//int kilometro;
	//float precioLatam;
	//float precioAerolineas;
	//menu

	do
	{
		printf("1- Ingrese los KMs. \n"
				"2- Ingrese el precio del vuelo. \n"
				"3- Calcular los precios. \n"
				"4- Mostrar los precios. \n"
				"5- Carga forzada de datos. \n"
				"6- Salir. \n"
				"\nElegir su opcion: ");

		while(intento == 0)
		{
			scanf("%d", &opcion);
		if(scanf("%d", &opcion)==0){
			printf("Error! Reingrese la opcion: ");
			fflush(stdin);
			scanf("%d", &opcion);
		}
		}
		switch(opcion){
			case 1:

				break;
			case 2:

				break;
			case 6:
				printf("Gracias por usar nuestro servicio.!!!");
				break;
		}
	}while(opcion < 7 && opcion > 0);
	return 0;
}
