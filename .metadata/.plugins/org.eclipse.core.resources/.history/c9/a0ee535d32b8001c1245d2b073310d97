//validacion kilometros
//No puede validar datos alfabeticos por falta de comprension de vectores
#include <stdio.h>

int valKilometros(int kilometros)
{

		while(kilometros <= 0){
			printf("\nError! Reingrese los kilometros: ");
			fflush(stdin);
			scanf("%d", &kilometros);
		}
		return kilometros;


}

float valPrecioLatam(float precioLatam)
{
	int continuar;
	if(precioLatam <= 0){
		printf("Esta ingrensando un precio no valido para calcular.");
		printf("\Desea continuar...1-SI/0-NO");
		scanf("%d", &continuar);
		if(scanf("%d", &continuar)==0){
			break;
		}
	}
	return precioLatam;
}
