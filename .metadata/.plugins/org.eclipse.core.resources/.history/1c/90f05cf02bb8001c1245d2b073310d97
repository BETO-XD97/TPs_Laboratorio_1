#include <stdio.h>
#include <stdlib.h>
#include "validaciones.h"

int main(void) {
	setbuf(stdout, NULL);
	//variables
	int opcion;
	int kilometros;
	float precioLatam;
	float precioAerolineas;

	//menu
	do
	{
		printf("1- Ingrese los KMs. \n"
				"2- Ingrese el precio del vuelo. \n"
				"3- Calcular los precios. \n"
				"4- Mostrar los precios. \n"
				"5- Carga forzada de datos. \n"
				"6- Salir. \n"
				"\nElegir su opcion: ");
		fflush(stdin);
		scanf("%d", &opcion);

		switch(opcion){
			case 1:
				printf("Ingrese los kilometros: ");
				scanf("%d", &kilometros);
				kilometros = valKilometros(kilometros);
				opcion = 2;
				break;
			case 2:
				printf("Ingrese el precio de vuelo de LATAM: ");
				scanf("%f", &precioLatam);
				printf("Ingrese el precio de vuelo de Aerolineas: ");
				scanf("%f", &precioAerolineas);

				break;
			case 6:
				printf("Gracias por usar nuestro servicio.!!!");
				break;
			default:
				printf("Error! Reingrese una opcion: \n");
				break;
		}
	}while(opcion !=6);
	return 0;
}
