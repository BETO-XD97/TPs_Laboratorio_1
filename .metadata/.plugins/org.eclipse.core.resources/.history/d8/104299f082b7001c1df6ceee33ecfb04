#include <stdio.h>
#include <stdlib.h>

//Prototipo o firma

//Primer prototipo(Parametro Reales)
//void sumar(void);

//Segundo prototipo(Parametro Formales)
//void sumar(int numero1, int numero2);

//Tercer prototipo
//int sumar(int numero1, int numero2);

//Cuarto prototipo
int sumar(void);


int main(void)
{
	setbuf(stdout, NULL);
	//Primer Prototipo
	//sumar();

	//Segundo Prototipo

	int a;//no importa el nombre solo el valor
	int b;

	printf("Ingrese un numero: ");
	scanf("%d", &a);

	printf("Ingrese otro numero: ");
	scanf("%d", &b);

	sumar(a, b);


	//Tercer Prototipo
	/*
	int a;//no importa el nombre solo el valor
	int b;
	int resultado;

	printf("Ingrese un numero: ");
	scanf("%d", &a);

	printf("Ingrese otro numero: ");
	scanf("%d", &b);

	resultado = sumar(a, b);

	printf("El resultado de la suma: %d", resultado);
	*/

	//Cuarto Prototipo
	/*
	int resultado;

	resultado = sumar();

	printf("\nEl resultado de la suma: %d", resultado);
	*/
	return 0;
}

